@model ServiceWebsite.ViewModels.WebSite.BlogDetailViewModel
@{
    SettingViewModel.SeoTitle = Model.SeoTitle;
    SettingViewModel.SeoDescription = Model.SeoDescription;
    SettingViewModel.SeoKeywords = Model.SeoKeywords;
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="details-banner">
    <div class="content d-flex align-items-center justify-content-center text-center">
        <div class="container">
            <div class="breadcrumb-holder d-inline-flex">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index","Home")">
                                @WebSiteViewItems.HomePage
                                <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">

                            @WebSiteViewItems.Blog

                        </li>

                    </ol>
                </nav>
            </div>
            <!-- End of .breadcrumb-holder -->
            <h1>@Model.Name</h1>

            <div class="post-info">
                <a href="#">
                    <i class="icon-Calendar---Check"></i> @Model.Date.ToShortDateString()
                </a>

            </div>
            <!-- End of .post-info -->
        </div>
        <!-- End of .container -->
    </div>
    <!-- End of .content -->
</div>



<!-- Blog-details starts
  ============================================ -->
<div class="section blog-details">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md">
                <div class="post-details">
                    <div class="container" style="text-align: center">
                        <div class="img-container">
                            <img src="@Url.Content(String.Format(SystemConstants.BlogImagePath) + "/" + Model.ImageList.FirstOrDefault()?.FileName)" alt="@Model.ImageList.FirstOrDefault()?.Alt" class="img-fluid">
                        </div>
                    </div>
                    <!-- End of .img-container -->

                    <p>
                        @Html.Raw(Model.Description)
                    </p>





                </div>
                <!-- End of .post-details -->
                <!-- End of .about-author -->
                <!-- End of .comment-form -->
            </div>
            <!-- End of .col-md-auto -->
            <!-- End of .col-md-4 -->
        </div>
        <!-- End of .row -->
    </div>
    <!-- End of .container -->
</div>
<!-- End of .blog-posts -->
