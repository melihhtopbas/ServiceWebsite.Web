@using ServiceWebsite.Core.TypeCodes
@model ServiceWebsite.ViewModels.Admin.CustomerPaymentListSearchViewModel
@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-solid">
            <div class="box-header">
                <i class="fa fa-book"></i>
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                @using (Html.BeginForm("CustomerPaymentList", "Payment", new { Area = "Admin" }, FormMethod.Post, new { role = "form", id = "customerPaymentSearchForm", data_ajax_form = "true", data_target_container = "#customerPaymentListContainer" }))
                {

                    <div class="row">


                        <div class="form-group form-group-sm col-xs-6 col-sm-4 col-md-4 col-lg-4 @Html.ModelStateFor(m => m.PostPaymentResult)">
                            <div class="input-group input-group-sm">
                                <span class="input-group-addon as-label">@Html.DisplayNameFor(m => m.PostPaymentResult) </span>

                                @Html.EnumDropDownListFor(
                                    x => x.PostPaymentResult,
                                    "Seçiniz",
                                    new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.PostPaymentResult, "", new { @class = "text-danger" })
                        </div>
