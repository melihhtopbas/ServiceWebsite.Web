@model ServiceWebsite.ViewModels.Common.ImageInsertViewModel


@using (Html.BeginForm("ServiceImageAdd", "ServiceSetting", new { Area = "Admin" }, FormMethod.Post, new { id = "serviceImageAddForm", role = "form", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-xs-12">
            @Html.AntiForgeryToken()

            @Html.RenderValidationSummary(true)
        </div>
    </div>

    <div class="row">
        @Html.HiddenFor(a=>a.HtmlPrefix)
        @Html.HiddenFor(a=>a.ServiceUniqueTempId)
        <div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-6 col-lg-6 ">
            @Html.TextBox("imagefile", null, new {@class = "form-control", type = "file"})

        </div>

        <div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-6 col-lg-6 @Html.ModelStateFor(m => m.Title)">
            @Html.TextBoxBlockLabelAsAddonFor(m => m.Title, new {@class = "show-maxlength", autofocus = "true"})
        </div>

        <div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-6 col-lg-6 @Html.ModelStateFor(m => m.Alt)">
            @Html.TextBoxBlockLabelAsAddonFor(m => m.Alt, new {@class = "show-maxlength", autofocus = "true"})
        </div>
    </div>
    <hr />
    <div class="form-group form-group-sm row">
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary pull-right margin-left10"><span class="fa fa-check"></span>&nbsp;&nbsp;Kaydet</button>
            <button class="btn btn-danger pull-right" type="button" data-dismiss="modal"><span class="fa fa-times"></span>&nbsp;&nbsp;İptal</button>
        </div>
    </div>
    <div class="clearfix"></div>
}