@model ServiceWebsite.ViewModels.Admin.CustomerAttributeAddViewModel
@using (Html.BeginForm("Add", "CustomerAttributeSetting", new { Area = String.Empty }, FormMethod.Post, new { id = "customerAttributeAddForm", role = "form" }))
{
    <style>
        form ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        form li {
            float: left;
        }

            form li a {
                display: block;
                color: white;
                text-align: center;
                padding: 16px;
                text-decoration: none;
            }

                form li a:hover {
                    background-color: #111111;
                }
    </style>
    <div class="row">
        <div class="col-xs-12">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.LanguageId, new { data_val = "false" })
            @Html.RenderValidationSummary(true)
        </div>
    </div>

    <div class="row">



        <div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-6 col-lg-6 @Html.ModelStateFor(m => m.Name)">
            @Html.TextBoxBlockLabelAsAddonFor(m => m.Name, new { @class = "show-maxlength", autofocus = "true" })
        </div>

        <div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-6 col-lg-6 @Html.ModelStateFor(m => m.ResourceValue)">
            @Html.TextBoxBlockLabelAsAddonFor(m => m.ResourceValue, new { @class = "show-maxlength", autofocus = "true" })
        </div>
        <div class="form-group form-group-sm col-xs-12 col-sm-6 col-md-6 col-lg-6 @Html.ModelStateFor(m => m.AttributeControlType)">
            <div class="input-group input-group-sm">
                <span class="input-group-addon as-label required">@Html.DisplayNameFor(m => m.AttributeControlType) </span>
                @Html.EnumDropDownListFor(a => a.AttributeControlType, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.AttributeControlType, "", new { @class = "text-danger" })
        </div>
        <div class="form-group form-group-sm col-xs-12 @Html.ModelStateFor(m => m.IsRequired)">
            <div class="input-group input-group-sm">
                @Html.CheckBoxFor(m => m.IsRequired,
                    new
                    {
                        data_make_switchery_small = "true",
                        @class = "form-control",
                        data_val = "false"
                    })
                <span class="margin-left5">@Html.DisplayNameFor(m => m.IsRequired)</span>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-12 col-lg-12 @Html.ModelStateFor(m => m.AttributeValue)">
            <div class="input-group input-group-sm">
                @Html.TextAreaFor(m => m.AttributeValue, new { @class = "form-control", rows = "5", data_make_cke = "true", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.AttributeValue).ToString()) })
            </div>
            @Html.ValidationMessageFor(m => m.AttributeValue, "", new { @class = "text-danger" })
        </div>

    </div>

    <hr />

    <div class="form-group form-group-sm row">
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary pull-right margin-left10"><span class="fa fa-check"></span>&nbsp;&nbsp;Kaydet</button>
            <button class="btn btn-danger pull-right" type="button" data-dismiss="modal"><span class="fa fa-times"></span>&nbsp;&nbsp;İptal</button>
        </div>
    </div>
    <div class="clearfix"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.js"></script>
}
