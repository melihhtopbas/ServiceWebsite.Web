
@model ServiceWebsite.ViewModels.Admin.CustomerAttributeListViewModel
<tr id="@("customerAttribute_"+Model.Id)" class="master-row">
    
    <td>@Model.Name</td>
    <td>@Model.ResourceValue</td>
     
    <td style="width:50px">
        <a data-modal-form="true"
           data-modal-size="modal-lg"
           data-modal-update="#customerAttribute_@Model.Id"
           data-modal-highlight="#customerAttribute_@Model.Id"
           data-modal-title="Değer Düzenle"
           data-hook-beforeunload="true"
           class="btn btn-block btn-success btn-sm"
           href="@Url.Action("Edit", "CustomerAttributeSetting", routeValues: new {Area = "Admin",customerAttributeId=Model.Id})">
            <i class="fa fa-edit fa-fw text-success"></i> Değer Düzenle
        </a>
    
    </td>
    <td style="width:50px">
        <a href="javascript:void(0);"
           data-toggle="confirmation"
           title="Emin Misiniz"
           data-btn-ok-label="Evet"
           data-btn-cancel-label="Hayır"
           data-placement="top"
           data-customerAttribute-id="@Model.Id"
           data-on-confirm="deleteCustomerAttribute"
           class="btn btn-block btn-danger btn-sm">
            <i class="fa fa-trash fa-fw text-danger"></i> Değer Sil
        </a>

    </td>
</tr>
