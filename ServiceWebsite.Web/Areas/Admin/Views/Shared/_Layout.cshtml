        function deleteBlog() {
            var that = $(this);
            var blogId = that.data('blogId');

            var container = $('#blogListContainer');
            //The overlay
            var overlay = $("<div class='loader-wrapper'><div class='loadingOverlay'></div></div>");

            container.append(overlay);

            $.ajax({
                url: '/admin/blogsetting/delete',
                dataType: 'json',
                type: "POST",
                cache: false,
                data: { blogId: blogId }
            }).done(function(result) {
                container.find(overlay).remove();
                if (result.success) {
                    var $tr = that.closest('tr.master-row');
                    $tr.nextUntil('tr.master-row').empty().remove();
                    $tr.animateDelete();

                    $.each(result.successMessages,
                        function(i, item) {
                            toastr.success(item);
                        });
                    $.each(result.warningMessages,
                        function(i, item) {
                            toastr.success(item);
                        });
                } else {
                    $.each(result.errorMessages,
                        function(i, item) {
                            toastr.error(item);
                        });
                }
            }).fail(function() {
                container.find(overlay).remove();
            });
        };
