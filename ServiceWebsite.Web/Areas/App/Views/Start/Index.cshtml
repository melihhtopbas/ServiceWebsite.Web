<script>
     
    $( "#analysisButton" ).click(function() {
        $("#analysisPart").css("display", "none");
        $("#informationPart").css("display", "block");
        var websiteUrl = $("#websiteUrl").val();
        $.fn.websiteAnalysis(websiteUrl);

    });

    $.fn.websiteAnalysis = function (websiteUrl) {
        $.ajax({
            url: '/app/start/analysis',
            dataType: 'json',
            type: "POST",
            cache: false,
            data: { websiteUrl: websiteUrl }
        }).done(function (result) {
            //container.find(overlay).remove();
            if (result.success) {
                $("#mainPart").html(result.item);

            } else {
                $.each(result.errorMessages,
                    function (i, item) {
                        
                    });
            }
        }).fail(function () {

        });
        return false;
    }


</script>