<style>
    
    .content {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto
    }
    .loader {
        position: relative;
        width:100%;
        height: 60px;
        filter: url('#goo');
    }
    .loader__item {
        position: absolute;
        display: inline-block;
        top: 0;
        left: 0;
        width: 60px;
        height: 60px;
        background: linear-gradient(45deg,#61c2ff 0%,#1aa7ff 100%);
        border-radius: 50%;
        animation: loading 4s infinite;
        transform: scale(.1);
        transform-origin: center left;
    }
    .loader__item:nth-child(2) {
        animation-delay: .4s;
    }
    .loader__item:nth-child(3) {
        animation-delay: .8s;
    }
    .loader__item:nth-child(4) {
        animation-delay: 1.2s;
    }
    .loader__item:nth-child(5) {
        animation-delay: 1.6s;
    }
    @@keyframes loading {
    0% {
        transform: scale(.1);
    }
    45% {
        left: 120px;
        transform: scale(1);
    }
    90% {
        left: 294px;
        transform: scale(.1);
    }
    }
    .title {
        margin-top:60px;
        font:25px 'Trebuchet MS';
        color: #444;
        text-align: center;
        color: white
    }
    svg {
        display: none;
    }

</style>
